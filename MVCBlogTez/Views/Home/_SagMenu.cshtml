@model MVCBlogTez.Models.ViewModels.SagMenuViewModel

<div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
    <div class="sidebar">
        <div class="widget">
            <h2 class="widget-title">Arama</h2>
            <form class="form-inline search-form">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Site içi arama..">
                </div>
                <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
            </form>
        </div><!-- end widget -->

        <div class="widget">
            <h2 class="widget-title">Son Yazılar</h2>
            <div class="blog-list-widget">
                <div class="list-group">

                    @foreach (var Yazi in Model.Yazilar)
                    {
                        <a href="@Url.RouteUrl("Default", new { controller="Home", action="Yazi", id = Yazi.YaziId})" class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="w-100 justify-content-between">
                                <img src="@Yazi.FotografKonum" alt="" class="img-fluid float-left">
                                <h5 class="mb-1">@Yazi.Baslik</h5>
                                <small>@Yazi.YayinlanmaTarihi.ToString("dd MMM yyyy")</small>
                            </div>
                        </a>
                    }

                </div>
            </div><!-- end blog-list -->
        </div><!-- end widget -->

        <div class="widget">
            <h2 class="widget-title">Duyurular</h2>
            <div class="blog-list-widget">
                <div class="list-group">
                    @foreach (var Duyuru in Model.Duyurular)
                    {
                        {
                            <div class="list-group-item list-group-item-action flex-column align-items-start">
                                <div class="w-100 justify-content-between">
                                    <h5 class="mb-1">@Duyuru.DuyuruIcerik</h5>
                                    <small>@Duyuru.YayinlanmaTarihi.ToString("dd MMM yyyy")</small>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div><!-- end blog-list -->
        </div><!-- end widget -->

        <div class="widget">
            <h2 class="widget-title">Popüler Kategoriler</h2>
            <div class="link-widget">
                <ul>
                    @foreach (var Kategori in Model.Kategoriler)
                    {
                        <li><a href="#">@Kategori.KategoriAd <span>(@Kategori.YaziSayisi)</span></a></li>
                    }
                </ul>
            </div><!-- end link-widget -->
        </div><!-- end widget -->
    </div><!-- end sidebar -->
</div><!-- end col -->