@model IEnumerable<MVCBlogTez.Models.Yorum>
@{
    ViewBag.Title = "Yorum";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">

    <table class="table edit mt-2">
        <thead>
            <tr>
                <th scope="col">Yorum İçerik</th>
                <th scope="col">Yazı Adı</th>
                <th scope="col">Yayınlanma Tarihi</th>
                <th scope="col">Yorum Sahibi</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Yorum in Model)
            {
                <tr>
                    <td scope="row">@Yorum.YorumIcerik</td>
                    <td scope="row">@Yorum.Yazi.Baslik</td>
                    <td scope="row">@Yorum.YayinlanmaTarihi.ToString("dd MMM yyyy hh:mm")</td>
                    <td scope="row">@Yorum.Kullanici.Ad @Yorum.Kullanici.Soyad</td>
                    <td><a href="@Url.RouteUrl("Default", new { controller="Admin", action="YorumSil", id = Yorum.YorumId})" type="button" class="btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
