@model IEnumerable<MVCBlogTez.Models.Kategori>
@{
    ViewBag.Title = "Kategori";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">

    <a class="btn btn-success mt-2" href="@Url.Action("KategoriEkle", "Admin")">Kategori Ekle</a>

    <table class="table edit mt-2">
        <thead>
            <tr>
                <th scope="col">Kategori Adı</th>
                <th scope="col">Oluşturulma Tarihi</th>
                <th scope="col">Yazı Sayısı</th>
                <th scope="col">Oluşturan</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Kategori in Model)
            {
                <tr>
                    <td scope="row">@Kategori.KategoriAd</td>
                    <td scope="row">@Kategori.OlusturulmaTarihi.ToString("dd MMM yyyy hh:mm")</td>
                    <td scope="row">@Kategori.YaziSayisi</td>
                    <td scope="row">@Kategori.Kullanici.Ad @Kategori.Kullanici.Soyad</td>
                    <td><a href="@Url.RouteUrl("Default", new { controller="Admin", action="KategoriSil", id = Kategori.KategoriId})" type="button" class="btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
