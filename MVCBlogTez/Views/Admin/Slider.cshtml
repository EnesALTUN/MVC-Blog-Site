@model IEnumerable<MVCBlogTez.Models.Slider>
@{
    ViewBag.Title = "Slider";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">

    <a class="btn btn-success mt-2" href="@Url.Action("SliderEkle", "Admin")">Slider Ekle</a>

    <table class="table edit mt-2">
        <thead>
            <tr>
                <th scope="col">Resim</th>
                <th scope="col">Başlık</th>
                <th scope="col">İçerik</th>
                <th scope="col">Sıralama</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Slider in Model)
            {
                <tr>
                    <td scope="row"><img src="@Slider.FotografKonum" width="100px" height="100px" /></td>
                    <td scope="row">@Slider.SliderBaslik</td>
                    <td scope="row">@Slider.SliderIcerik</td>
                    <td scope="row">@Slider.Siralama</td>
                    <td><a href="@Url.RouteUrl("Default", new { controller="Admin", action="SliderSil", id = Slider.SliderId})" type="button" class="btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
