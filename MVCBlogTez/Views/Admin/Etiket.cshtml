@model IEnumerable<MVCBlogTez.Models.Etiket>
@{
    ViewBag.Title = "Etiket";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">

    <a class="btn btn-success mt-2" href="@Url.Action("EtiketEkle", "Admin")">Etiket Ekle</a>

    <table class="table edit mt-2">
        <thead>
            <tr>
                <th scope="col">Etik Adı</th>
                <th scope="col">Yazı Başlık</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Etiket in Model)
            {
                <tr>
                    <td scope="row">@Etiket.EtiketAd</td>
                    <td scope="row">@Etiket.Yazi.Baslik</td>
                    <td><a href="@Url.RouteUrl("Default", new { controller="Admin", action="EtiketDuzenle", id = Etiket.EtiketId})" type="button" class="btn-warning">Düzenle</a><a href="@Url.RouteUrl("Default", new { controller="Admin", action="EtiketSil", id = Etiket.EtiketId})" type="button" class="btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>